extends includes/layout

block content
  h1= title
  p Adminstration Page
  br

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2= title
      p=headerTagline
        strong First: 
          <span id='userInfoFirstname'></span>
        br
        strong Last:
          <span id='userInfoLastname'></span>
        br
        strong Job Title: 
          <span id='userInfoJobtitle'></span>
        br
        strong Email:
          <span id='userInfoEmail'></span>
        br
        strong Company:
          <span id='userInfoCompany'></span>
        br
        strong Country:
          <span id='userInfoCountry'></span>
        br
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th Full Name
          th Email
          th Delete?
        tbody
          td one
          td two
          td three
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserFirstname(type='text', placeholder='First name')
        input#inputUserLastname(type='text', placeholder='Last name')
        input#inputUserJobtitle(type='text', placeholder='Job Title')
        br
        input#inputUserEmail(type='text', placeholder='Email')
        input#inputUserCompany(type='text', placeholder='Company')
        input#inputUserCountry(type='text', placeholder='Country')
        br
        button#btnAddUser Add User
    // /ADD USER


  // /WRAPPER
  footer 
    script(src='/js/jquery2.0.3.min.js')
    script(src='/js/global.js')
    script(src='/js/survey_tool_admin.js')
